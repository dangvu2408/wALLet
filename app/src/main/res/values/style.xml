<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:navigationBarColor">#ffffff</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <style name="roundedImg">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="tabLayoutText">
        <item name="android:textColor">@color/white</item>
        <item name="textAllCaps">false</item>
        <item name="android:textStyle">bold</item>
        <item name="fontFamily">@font/sfpro_semibold</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="outlineButton">
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="strokeColor">#10B6CC</item>
        <item name="strokeWidth">2dp</item>
        <item name="android:radius">5dp</item>
    </style>

    <style name="CustomDatePickerDialog" parent="ThemeOverlay.MaterialComponents.Dialog">
        <item name="android:windowBackground">@drawable/itemsbackground</item>
        <item name="fontFamily">@font/sfpro_bold</item>
        <item name="colorAccent">#10B6CC</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:dateTextAppearance">@style/CalendarDataTextStyle</item>
        <item name="android:weekDayTextAppearance">@style/CalendarWeeksTextStyle</item>
        <item name="android:headerTimeTextAppearance">@style/CalendarWeeksTextStyle</item>
    </style>

    <style name="CalendarDataTextStyle" parent="TextAppearance.MaterialComponents.Caption">
        <item name="android:fontFamily">@font/sfpro_regular</item>
    </style>

    <style name="CalendarWeeksTextStyle" parent="TextAppearance.MaterialComponents.Caption">
        <item name="android:fontFamily">@font/sfpro_semibold</item>
    </style>



</resources>