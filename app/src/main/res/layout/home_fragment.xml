<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/white">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/background003"
        android:scaleType="centerCrop" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="180dp"
        android:background="@color/white">
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp">
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:layout_marginLeft="20dp"
            android:scaleType="fitStart"
            android:src="@drawable/removedicon"/>
    </LinearLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none"
        android:id="@+id/scroll_full_view">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="80dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:orientation="horizontal"
                    android:padding="10dp"
                    android:gravity="start">
                </LinearLayout>
                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scrollbars="none">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:layout_marginRight="10dp"
                        android:paddingRight="10dp">
                        <androidx.cardview.widget.CardView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:cardCornerRadius="15dp"
                            android:layout_marginRight="10dp"
                            android:layout_marginLeft="20dp"
                            android:id="@+id/layout_root"
                            android:background="@color/white"
                            android:translationZ="5dp">
                            <RelativeLayout
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent">
                                <com.google.android.material.imageview.ShapeableImageView
                                    android:layout_width="55dp"
                                    android:layout_height="55dp"
                                    android:src="@drawable/defaultavt"
                                    android:id="@+id/profile_avatar"
                                    app:strokeColor="@color/main_color_04"
                                    app:strokeWidth="2dp"
                                    android:padding="5dp"
                                    android:layout_marginLeft="10dp"
                                    android:layout_marginTop="5dp"
                                    android:layout_marginBottom="5dp"
                                    app:shapeAppearanceOverlay="@style/roundedImg"
                                    android:layout_centerVertical="true"/>

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="75dp"
                                    android:layout_marginRight="10dp"
                                    android:orientation="vertical"
                                    android:layout_centerVertical="true">
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Xin chào, Nguyễn Văn A"
                                        android:fontFamily="@font/averta_semibold"
                                        android:id="@+id/user_full_name"
                                        android:textSize="17sp"
                                        android:layout_marginBottom="5dp"
                                        android:textColor="@color/black"/>
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Chúc bạn một ngày mới tốt lành!"
                                        android:fontFamily="@font/averta_semibold"
                                        android:textSize="16sp"
                                        android:textColor="@color/black"/>
                                </LinearLayout>
                            </RelativeLayout>
                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:cardCornerRadius="15dp"
                            android:padding="10dp"
                            android:layout_marginRight="10dp"
                            android:background="@color/white"
                            android:translationZ="5dp">
                            <ImageView
                                android:layout_width="135dp"
                                android:layout_height="72dp"
                                android:scaleType="fitCenter"
                                android:src="@drawable/chart_img_full"
                                android:layout_gravity="right"
                                android:layout_marginRight="15dp"
                                android:elevation="0dp"/>
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">
                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="10dp"
                                    android:paddingRight="10dp"
                                    android:paddingTop="10dp"
                                    android:paddingBottom="10dp"
                                    android:orientation="vertical"
                                    android:elevation="5dp"
                                    android:layout_gravity="center_vertical">
                                    <LinearLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:paddingBottom="5dp"
                                        android:orientation="horizontal">
                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="Tổng số dư"
                                            android:fontFamily="@font/averta_bold"
                                            android:textSize="18sp"
                                            android:layout_gravity="center_vertical"
                                            android:textColor="@color/black"/>
                                        <ImageView
                                            android:layout_width="20dp"
                                            android:layout_height="20dp"
                                            android:layout_marginLeft="75dp"
                                            android:layout_marginRight="10dp"
                                            android:id="@+id/eye_view"
                                            android:src="@drawable/eye"
                                            android:layout_gravity="center_vertical"/>
                                    </LinearLayout>
                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:text="*** *** VND"
                                        android:id="@+id/eye_balance"
                                        android:fontFamily="@font/averta_semibold"
                                        android:textSize="18sp"
                                        android:textColor="@color/black"/>
                                </LinearLayout>
                            </LinearLayout>

                        </androidx.cardview.widget.CardView>
                    </LinearLayout>
                </HorizontalScrollView>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/bordered_background"
                android:padding="15dp"
                android:translationZ="5dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@drawable/itemsbackground"
                    android:padding="10dp"
                    android:layout_marginBottom="10dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:id="@+id/total_balance"
                            android:text="Tổng số dư: 3.000.000.000 VND"
                            android:fontFamily="@font/averta_semibold"
                            android:textSize="18sp"
                            android:layout_gravity="center_vertical"
                            android:textColor="@color/black"/>
                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/downicon"
                            android:id="@+id/more_icon"
                            android:layout_gravity="center"/>
                    </LinearLayout>
                    <ListView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:scrollbars="none"
                        android:id="@+id/full_wallet_acc"
                        android:visibility="gone"/>
                </LinearLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Thêm giao dịch"
                    android:fontFamily="@font/averta_bold"
                    android:textSize="22sp"
                    android:textColor="@color/black"/>
                <GridView
                    android:id="@+id/gridview_adding"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:focusable="false"
                    android:gravity="center"
                    android:numColumns="4"
                    android:scrollbars="none"
                    android:listSelector="@android:color/transparent"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingBottom="5dp"
                    android:paddingTop="5dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Thống kê dòng tiền"
                        android:fontFamily="@font/averta_bold"
                        android:textSize="22sp"
                        android:textColor="@color/black"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Xem chi tiết"
                        android:id="@+id/more_detail"
                        android:fontFamily="@font/averta_semibold"
                        android:textSize="16sp"
                        android:textColor="@color/main_color_01"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@drawable/itemsbackground"
                    android:paddingRight="10dp"
                    android:paddingBottom="10dp"
                    android:paddingLeft="10dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingRight="10dp"
                        android:paddingLeft="10dp">
                        <Button
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:id="@+id/total_revenue"
                            android:text="Tổng tiền vào"
                            android:textColor="@color/black"
                            android:textSize="16sp"
                            android:background="@color/white"
                            android:fontFamily="@font/averta_bold"/>
                        <Button
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:id="@+id/total_expense"
                            android:text="Tổng tiền ra"
                            android:textColor="@color/black"
                            android:textSize="16sp"
                            android:background="@color/white"
                            android:fontFamily="@font/averta_bold"/>
                    </LinearLayout>
                    <com.github.mikephil.charting.charts.BarChart
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:id="@+id/balance_bar_chart"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Tổng tiền vào tháng này:"
                            android:fontFamily="@font/averta_regular"
                            android:id="@+id/des_title_trans"
                            android:textSize="16sp"
                            android:paddingRight="5dp"
                            android:textColor="@color/black"/>
                        <ImageView
                            android:layout_width="18dp"
                            android:layout_height="18dp"
                            android:src="@drawable/arrow_up_circle_blue"
                            android:id="@+id/arrow_direct"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="93%"
                            android:fontFamily="@font/averta_bold"
                            android:id="@+id/percent_moving"
                            android:textSize="18sp"
                            android:paddingLeft="5dp"/>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingTop="10dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Giao dịch có giá trị lớn"
                        android:fontFamily="@font/averta_bold"
                        android:textSize="22sp"
                        android:textColor="@color/black"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Xem tất cả"
                        android:id="@+id/view_all_1"
                        android:fontFamily="@font/averta_semibold"
                        android:textSize="16sp"
                        android:textColor="@color/main_color_01"/>
                </LinearLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ListView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:divider="@android:color/transparent"
                        android:dividerHeight="5dp"
                        android:padding="5dp"
                        android:nestedScrollingEnabled="true"
                        android:scrollbars="none"
                        android:id="@+id/most_balance"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:id="@+id/no_data"
                        android:gravity="center_horizontal"
                        android:padding="10dp">
                        <ImageView
                            android:layout_width="90dp"
                            android:layout_height="90dp"
                            android:src="@drawable/emptybox"
                            android:layout_margin="10dp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Không có giao dịch"
                            android:fontFamily="@font/averta_semibold"
                            android:textSize="18sp"
                            android:textColor="@color/black"
                            android:textAlignment="center"/>
                    </LinearLayout>
                </RelativeLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingTop="10dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Giao dịch gần đây"
                        android:fontFamily="@font/averta_bold"
                        android:textSize="22sp"
                        android:textColor="@color/black"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Xem tất cả"
                        android:id="@+id/view_all_2"
                        android:fontFamily="@font/averta_semibold"
                        android:textSize="16sp"
                        android:textColor="@color/main_color_01"/>
                </LinearLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ListView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:divider="@android:color/transparent"
                        android:dividerHeight="5dp"
                        android:padding="5dp"
                        android:nestedScrollingEnabled="true"
                        android:scrollbars="none"
                        android:id="@+id/currently"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:id="@+id/no_data_current"
                        android:gravity="center_horizontal"
                        android:padding="10dp">
                        <ImageView
                            android:layout_width="90dp"
                            android:layout_height="90dp"
                            android:src="@drawable/emptybox"
                            android:layout_margin="10dp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Không có giao dịch nào gần đây"
                            android:fontFamily="@font/averta_semibold"
                            android:textSize="18sp"
                            android:textColor="@color/black"
                            android:textAlignment="center"/>
                    </LinearLayout>
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp"
        android:background="@drawable/gradient_background02"
        android:visibility="gone"
        android:translationZ="5dp"
        android:id="@+id/layout_hidden">
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:layout_marginLeft="20dp"
            android:scaleType="fitStart"
            android:src="@drawable/removedicon"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:elevation="10dp"
        android:padding="10dp"
        android:orientation="horizontal"
        android:gravity="end">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center_vertical">
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/search"
                android:id="@+id/search_top1"
                android:layout_margin="10dp"/>
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/whitebell"
                android:id="@+id/notification_bell1"
                android:layout_margin="10dp"/>
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/menu"
                android:id="@+id/menu_top1"
                android:layout_margin="10dp"/>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>