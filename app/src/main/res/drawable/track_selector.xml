<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="true">
        <shape android:shape="rectangle">
            <stroke android:color="@color/main_color_02" android:width="2dp"/>
            <solid android:color="@color/main_color_02" />
            <corners android:radius="40dp" />
            <size android:width="40dp" android:height="24dp" />
        </shape>
    </item>
    <item android:state_checked="false">
        <shape android:shape="rectangle">
            <stroke android:color="@color/color_02" android:width="2dp"/>
            <solid android:color="@color/color_02" />
            <corners android:radius="40dp" />
            <size android:width="40dp" android:height="24dp" />
        </shape>
    </item>
</selector>